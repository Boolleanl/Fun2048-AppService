<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.boollean.entity.MessageEntity" table="message" schema="appservice">
        <id name="msgid">
            <column name="msgid" sql-type="int(14)"/>
            <generator class="identity"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(12)" length="12"/>
        </property>
        <property name="time">
            <column name="time" sql-type="datetime"/>
        </property>
        <property name="msg">
            <column name="msg" sql-type="varchar(140)" length="140"/>
        </property>
    </class>
</hibernate-mapping>