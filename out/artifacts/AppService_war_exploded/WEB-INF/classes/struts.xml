            <result type="json"><param name="root">jsonData</param></result>
        </action>
        <action name="getBestScore6ByName" class="com.boollean.action.UserAction" method="getBestScore6ByName">
            <result type="json"><param name="root">jsonData</param></result>
        </action>
        <action name="listBest100Users4" class="com.boollean.action.UserAction" method="listBest100Users4">
            <result type="json"><param name="root">jsonData</param></result>
        </action>
        <action name="listBest100Users5" class="com.boollean.action.UserAction" method="listBest100Users5">
            <result type="json"><param name="root">jsonData</param></result>
