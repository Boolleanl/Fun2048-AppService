<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.i18n.encoding" value="UTF-8"/>

    <package name="json-default" extends="struts-default">
        <result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>

        <interceptors>
            <interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
            <interceptor name="jsonValidation" class="org.apache.struts2.json.JSONValidationInterceptor"/>

            <!-- Sample JSON validation stack -->
            <interceptor-stack name="jsonValidationWorkflowStack">
                <interceptor-ref name="basicStack"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="jsonValidation"/>
                <interceptor-ref name="workflow"/>
            </interceptor-stack>
        </interceptors>
    </package>

    <package name="default" namespace="/" extends="json-default">
        <action name="getAllUser" class="com.boollean.action.UserAction" method="getAllUser">
            <result type="json"><param name="root">jsonData</param>
                <param name="contentType">text/json</param>
            </result>
        </action>
        <action name="getUserByName" class="com.boollean.action.UserAction" method="getUserByName">
            <result name="success" type="json"><param name="root">jsonData</param></result>
            <result name="fail" type="json"><param name="root">jsonData</param></result>
        </action>
        <action name="getBestScore4ByName" class="com.boollean.action.UserAction" method="getBestScore4ByName">
            <result type="json"><param name="root">jsonData</param></result>
        </action>
