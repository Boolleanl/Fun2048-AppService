<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.UserEntity" table="user" schema="appservice">
        <id name="name">
            <column name="name" sql-type="varchar(12)" length="12"/>
        </id>
        <property name="password">
            <column name="password" sql-type="varchar(18)" length="18"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="int(11)"/>
        </property>
        <property name="avatar">
            <column name="avatar" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="bestscore4">
            <column name="bestscore4" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="bestscore5">
            <column name="bestscore5" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="bestscore6">
            <column name="bestscore6" sql-type="int(11)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>